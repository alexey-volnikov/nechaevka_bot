FROM python:3.11-slim  # Используем официальный образ Python версии 3.11 с минимальным набором пакетов
WORKDIR /app  # Создаем и выбираем рабочую директорию внутри контейнера
COPY requirements.txt ./  # Копируем файл зависимостей рядом с рабочей директорией
RUN pip install --no-cache-dir -r requirements.txt  # Устанавливаем зависимости без использования кэша
COPY . .  # Копируем весь исходный код приложения внутрь контейнера
ENV PORT=8000  # Устанавливаем переменную окружения с портом по умолчанию
EXPOSE 8000  # Открываем порт 8000 для подключения к Flask-серверу
CMD ["python", "app.py"]  # Запускаем приложение через интерпретатор Python
